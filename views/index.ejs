<%- include("./component/header.ejs") %>
<div class="p-3 mb-2 bg-dark text-white">
<div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <div class="form-group">
        <label for="exampleInputtodo">Taches</label>
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
    </div>
        <div class="form-group">
        <label for="exampleInputusername">Qui</label>
        <input type="text" name="username" class="form-control" placeholder="Who is it ?">
    </div>
        <div class="form-group">
        <label for="exampleInputdate">Quand</label>
        <input type="date" id="time" name="date" class="form-control"
       value=""
       min="2023-01-01" max="2025-12-31">
    </div>
        <input type="submit" value="Add Todo" class="btn btn-md btn-primary mx-3">
    </form>

    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
        <li class="list-group-item">
            
            To Do: <%= todos.todo %>  <br>
            
            Name: <%= todos.username %>  <br>
            
            Date: <%= todos.date %>  <br>

            <a href="/delete/todo/<%= todos._id %>"
                class="btn btn-danger btn-sm">Delete</a>
            
                <a href="/update/todo/modify"
                    class="btn btn-info btn-sm">Update</a></li>

        <% }) %>

    </ul>
</div>
</div>


<%- include("./component/footer.ejs")  %>